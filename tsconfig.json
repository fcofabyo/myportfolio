{
  "compilerOptions": {
    "target": "esnext", // Mudei para esnext para compatibilidade com novos recursos JS
    "module": "esnext", // Usar ESModules modernos
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx", // Para JSX no React 17+
    "esModuleInterop": true, // Para garantir a compatibilidade com módulos CommonJS
    "forceConsistentCasingInFileNames": true, // Para garantir consistência de maiúsculas/minúsculas nos nomes de arquivos
    "strict": true, // Para habilitar checagens estritas (recomendo para evitar erros)
    "skipLibCheck": true, // Para pular checagem de tipos nas bibliotecas (ajuda a evitar erros)
    "resolveJsonModule": true, // Para permitir a importação de arquivos JSON
    "lib": ["dom", "esnext"], // Adiciona suporte para DOM e recursos do ES mais modernos
    "moduleResolution": "node", // Resolver módulos como o Node faz
    "noImplicitAny": true, // Para evitar o tipo 'any' implícito
    "noEmitOnError": true, // Não gerar arquivos se houver erros de tipo
    "skipDefaultLibCheck": true // Ignora verificações nos arquivos padrões das bibliotecas
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
